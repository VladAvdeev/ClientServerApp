<Window x:Class="GymClient.Views.Admin.AdminWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GymClient.Views.Admin"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Сотрудники">
                <local:AdminControl DataContext="{Binding AdminEmployeeViewModel}"/>
            </TabItem>
            <TabItem Header="Клиенты">
                <local:AdminClientsControl DataContext="{Binding AdminClientViewModel}"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
